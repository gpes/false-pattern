<% include partials/header %>

<body>
    <div class='container-fluid'>
        <div class='row'>
            <div class='col s12 m8'>
                <pre class='prettyprint'>
                    <code class='language-java'>
                        <%= indicio.codigo %>
                    </code>
                </pre>
            </div>

            <div class='col s12 m4'>
                <div class='row steps center-align'>
                   <%= (current_position + 1) %> de <%= total_length %>
                </div>

                <div class='response'>
                    <span class='entidade'><%= indicio.entidade %></span> 
                    <br /><br /><br />
                    <span class='pergunta'>A entidade ao lado é um <b>falso</b> <i>Factory Method</i>?</span>
                    <div class='buttons'>
                        <form method='post' action='/answer'>
                            <input type='hidden' value='SIM' name='answer' /> 
                            <button type='submit' class="waves-effect waves-light btn btn-large green darken-2 block">SIM</button>
                        </form>
                        <form method='post' action='/answer'>
                            <input type='hidden' value='NAO' name='answer' /> 
                            <button type='submit' class="waves-effect waves-light btn btn-large red darken-2 block">NÂO</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="https://cdn.jsdelivr.net/gh/google/code-prettify@master/loader/run_prettify.js"></script>

<% include partials/footer %>
