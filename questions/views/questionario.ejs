<% include partials/header %>
    
    <div class="container-fluid">
        <div class="row">

            <form name="questoes" action="/questionario/responder" method="post">

                <% if (questoes.length > 0 || questoes != null) { %>

                    <% for(var i = 0; i < 1; i++) { %>

                        <div class="questao">
                            <div class="col s12 m6 offset-m3">
                                <div class="card my-card-color">
                                    <div class="card-content white-text">
                                        <span class="card-title">Questão <%= i + 1 %></span>
                                        <h5><%= questoes[i].categoria %></h5>
                                        <h3><%= questoes[i].padrao %></h3>
                                        <!--<h4><%= questoes[i].descricao %></h4>-->
                                        <!--<img src="<%= questoes[i].imagem %>" />-->
                                                
                                        <input type="hidden" name="questao<%= i + 1 %>[padrao]" value="<%= questoes[i].padrao %>" >
                                        <% for(var j = 0; j < questoes[i].termos.length; j++) { %>
                                            <input type="checkbox" name="questao<%= i + 1 %>[termos]" value="<%= questoes[i].termos[j] %>"> <%= questoes[i].termos[j] %>
                                        <% } %>
                                    </div>
                                    <div class="card-action right-align">
                                        <button type="button" class="left waves-effect waves-light btn grey lighten-3 black-text">Anterior</button>

                                        <button type="button" class="waves-effect waves-light btn grey lighten-3 black-text">Próxima</button>
                                    </div>
                                </div>
                            </div>
                        </div> <!-- end .questao -->
                    <% } %>

                <% } %>

            </form>
        
        </div>
    </div>


