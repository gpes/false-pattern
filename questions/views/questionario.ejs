<% include partials/header %>
    
    <div class="container-fluid">
        <div class="row">

            <form name="questoes" action="/questionario/responder" method="post">

                <% if (questoes.length > 0 || questoes != null) { %>

                        <% for(var i = 0; i < questoes.length; i++) { %>
                            
                                <div class="questao hide animated">
                                    <div class="col s12 m6 offset-m3">
                                        <div class="card my-card-color">
                                            <div class="card-content white-text">
                                                <span class="card-title">Questão <%= i + 1 %></span>
                                                <h5><%= questoes[i].categoria %></h5>
                                                <h3 class="my-text"><%= questoes[i].padrao %></h3>
                                                <button data-target="modal<%= i %>" class="btn modal-trigger">+</button>
                                                <br>
                                                
                                                <div id="modal<%= i %>" class="modal">
                                                    <div class="modal-content black-text">
                                                        <h4>Descrição</h4>
                                                        <p><%= questoes[i].descricao %></p>
                                                        <img src="<%= questoes[i].imagem %>" />
                                                    </div>
                                                    <div class="modal-footer">
                                                        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Entendi</a>
                                                    </div>
                                                </div>
                                                        
                                                <input type="hidden" name="questao<%= i + 1 %>[padrao]" value="<%= questoes[i].padrao %>" >
                                                <% for(var j = 0; j < questoes[i].termos.length; j++) { %>
                                                    <input type="checkbox" name="questao<%= i + 1 %>[termos]" value="<%= questoes[i].termos[j] %>"> <%= questoes[i].termos[j] %>
                                                <% } %>
                                            </div>
                                            <div class="card-action right-align">
                                                <button type="button" id="prev" onclick="anterior();" class="left waves-effect waves-light btn grey lighten-3 black-text">Anterior</button>

                                                <button type="button" id="next" onclick="proximo();" class="waves-effect waves-light btn grey lighten-3 black-text">Próxima</button>
                                            </div>
                                        </div>
                                    </div>
                                </div> <!-- end .questao -->
                        <% } %>

                        
                            <div class="questao hide animated">
                                <div class="col s12 m6 offset-m3">
                                    <div class="card my-card-color">
                                        <div class="card-content white-text">
                                            <span class="card-title">Questão 10</span>
                                            <h5>Dê suguestão de termos</h5>

                                            <input type="text" name="suguestao[padrao]" placeholder="Padrão de Projeto">
                                            <input type="text" name="suguestao[tipo]" placeholder="Tipo">
                                            <input type="text" name="suguestao[nome]" placeholder="Nome">
                                            <button type="button" onclick="addCampoSuguestao();">+</button>
                                        
                                        </div>
                                        <div class="card-action right-align">
                                            <button type="button" id="prev" onclick="anterior();" class="left waves-effect waves-light btn grey lighten-3 black-text">Anterior</button>

                                            <button type="button" id="next" onclick="proximo();" class="waves-effect waves-light btn grey lighten-3 black-text">Próxima</button>
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- end .questao -->
                        
                <% } %>

            </form>
        
        </div>
    </div>            

<% include partials/footer %>
